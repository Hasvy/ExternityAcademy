@using BlazorApp.Components.Calculator

@page "/counter"
@rendermode InteractiveServer

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>
<p>
    Number: 
    <input type="number" @bind-value=operand>@operand</input>
</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

<button class="btn btn-primary" @onclick="@(() => MathOperationExecute(Sum))">Sum</button>
<button class="btn btn-primary" @onclick="@(() => MathOperationExecute(Subtraction))">Subtraction</button>
<button class="btn btn-primary" @onclick="@(() => MathOperationExecute(Divide))">Divide</button>
<button class="btn btn-primary" @onclick="@(() => MathOperationExecute(Multiply))">Multiply</button>

<History ResultsHistory="results"/>